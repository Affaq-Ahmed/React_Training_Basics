{
  "compilerOptions": {
    /* Basic Options */
    "jsx": "react",                           /* Specify JSX code generation: 'preserve', 'react-native', or 'react' */
    "target": "es2018",                        /* Set the target ECMAScript version for your code */
    "module": "commonjs",                      /* Set the module system used by your code */
    "lib": ["es2018", "dom"],                  /* Specify the library files to be included in the compilation */
    "declaration": true,                       /* Generate .d.ts files for your code */
    "sourceMap": true,                         /* Generate source maps for debugging purposes */
    "outDir": "dist",                          /* Output directory for compiled files */
    "strict": true,                            /* Enable all strict type checking options */
    "esModuleInterop": true,                   /* Enable module interoperability between CommonJS and ES modules */
    "experimentalDecorators": true,            /* Enable support for experimental decorators */
    "emitDecoratorMetadata": true,             /* Emit metadata for decorators */
    "skipLibCheck": true,                      /* Skip type checking of library files to speed up compilation */
    "resolveJsonModule": true,                 /* Allow importing JSON files as modules */
    "noUnusedLocals": true,                    /* Report errors on unused local variables */
    "noUnusedParameters": true,                /* Report errors on unused function parameters */
    "noImplicitReturns": true,                 /* Report errors on functions without a return statement */
    "noFallthroughCasesInSwitch": true,        /* Report errors on fallthrough cases in switch statements */
    "noImplicitAny": true,                     /* Report errors on expressions and declarations with an implied 'any' type */

    /* Advanced Options */
    "forceConsistentCasingInFileNames": true,  /* Ensure consistent case for file names */
    "noEmitOnError": true,                     /* Do not emit outputs if any errors were reported */
    "noImplicitThis": true,                    /* Report errors on 'this' expressions with an implied 'any' type */
    "strictNullChecks": true,                  /* Enable strict null checking */
    "strictFunctionTypes": true,               /* Enable strict checking of function types */
    "strictPropertyInitialization": true,      /* Enable strict checking of property initialization */
    "noImplicitOverride": true,                /* Report errors when a method overrides a base class method without an explicit 'override' keyword */
    "noPropertyAccessFromIndexSignature": true,/* Report errors when indexing into an object with a property that is not known to exist */
    "baseUrl": ".",                            /* Set the base directory for resolving non-relative module names */
    "paths": {                                 /* Map module names to locations relative to the 'baseUrl' */
      "*": ["*", "src/*"]
    },
    "typeRoots": ["node_modules/@types"],      /* Specify the root directory for type definition files */
    "allowSyntheticDefaultImports": true,      /* Allow default imports from modules with no default export */
    "skipDefaultLibCheck": true                 /* Skip checking the default library */
  },
  "jsx": "react",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}